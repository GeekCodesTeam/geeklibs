<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easefun.polyv.livestreamer">

    <application>
        <activity
            android:name=".modules.login.PLVLSLoginStreamerActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".modules.login.PLVLSContractActivity" />
        <activity
            android:name=".scenes.PLVLSLiveStreamerActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".modules.chatroom.widget.PLVLSChatMsgInputWindow"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme.Translucent" />
        <service android:name=".modules.streamer.service.PLVLSForegroundService" />
    </application>
</manifest>