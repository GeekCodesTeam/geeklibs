<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/search_blue" />
            <solid android:color="@color/search_blue" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/gray_list_head_text" />
            <solid android:color="@color/gray_list_head_text" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>