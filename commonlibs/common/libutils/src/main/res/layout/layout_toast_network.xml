<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="238mm"
        android:layout_height="48mm"
        android:background="@drawable/bg_network"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18mm"
            android:layout_height="18mm"
            android:layout_marginLeft="10mm"
            android:src="@mipmap/im_bang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            android:text="网络不给力，请检查网络设置。"
            android:textColor="#FF6D4A"
            android:textSize="14mm" />

    </LinearLayout>
</LinearLayout>