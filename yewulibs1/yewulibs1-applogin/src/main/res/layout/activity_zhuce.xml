<?xml version="1.0" encoding="utf-8"?>
<com.haier.cellarette.baselibrary.jianpan.AutoHideInputMethodFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F9F7F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_login_top" />

        <TextView
            android:id="@+id/tv_error"
            style="@style/logincommtextview"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:maxEms="15"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/red" />

        <include layout="@layout/activity_zhuce_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="20dp">

                <EditText
                    android:id="@+id/edt11"
                    style="@style/logincontentedit"
                    android:hint="@string/yhzc_tip4"
                    android:inputType="textVisiblePassword"
                    android:maxLength="11"
                    android:padding="10dp"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_hqyzm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_sure"
                android:text="@string/yhzc_tip5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tel1"
            style="@style/logincommtextview"
            android:padding="20dp"
            android:text="@string/yhzc_tip9" />


        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btncomm_enpressed"
            android:text="注册"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb1"
                style="@style/CustomCheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="我已阅读并同意"
                android:textColor="@color/gray_list_head_text" />

            <TextView
                android:id="@+id/tv_webview1"
                style="@style/logincommtextview"
                android:layout_gravity="bottom"
                android:text="注册服务协议"
                android:textColor="@color/blue33b5e5"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>


    </LinearLayout>

</com.haier.cellarette.baselibrary.jianpan.AutoHideInputMethodFrameLayout>